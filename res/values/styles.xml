<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeLight" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:tabWidgetStyle">@style/MyTab</item>
        -->
    </style>

    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar">
        <item name="android:background">@drawable/action_bar_bg</item>
    </style>

    <style name="MyTab">
        <item name="android:background">#5b8399</item>
        <item name="android:textAppearance">@style/TabWidgetText</item>
    </style>

    <style name="TabWidgetText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DialogButtonTitle">
        <item name="android:gravity">left|center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


</resources>